<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network & Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- P2P & Local Server -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    
    <!-- Foreground Service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" tools:ignore="QueryAllPackagesPermission" />
    
    <!-- Keep screen/CPU awake during playback -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <queries>
        <package android:name="org.acestream.node" />
        <package android:name="org.acestream.media" />
        <package android:name="org.acestream.media.atv" />
        <package android:name="com.acestream.media.atv.engine" />
        <package android:name="org.acestream.core" />
    </queries>

    <!-- Android TV Features -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name=".AceStreamApp"
        android:extractNativeLibs="true"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AceStreamTV"
        android:networkSecurityConfig="@xml/network_security_config"
        android:banner="@drawable/tv_banner"
        tools:targetApi="34">

        <!-- Main Activity (Phone/Tablet) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AceStreamTV">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TV Activity (Leanback) -->
        <activity
            android:name=".ui.tv.TvMainActivity"
            android:exported="true"
            android:theme="@style/Theme.AceStreamTV.Leanback">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Player Activity -->
        <activity
            android:name=".ui.player.PlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.AceStreamTV.Player"
            android:launchMode="singleTop" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:theme="@style/Theme.AceStreamTV" />

        <activity
            android:name=".ui.MatchesActivity"
            android:label="Matches of the Day"
            android:theme="@style/Theme.AceStreamTV" />

        <!-- AceStream Foreground Service -->
        <service
            android:name=".acestream.AceStreamService"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>

</manifest>
