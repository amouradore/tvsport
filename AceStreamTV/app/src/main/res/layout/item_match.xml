<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Time Badge -->
        <TextView
            android:id="@+id/matchTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_time_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="21:00"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Home Team -->
        <ImageView
            android:id="@+id/homeLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_channel_placeholder"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/matchTime"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/homeTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Home Team"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@id/homeLogo"
            app:layout_constraintStart_toStartOf="@id/homeLogo"
            app:layout_constraintTop_toBottomOf="@id/homeLogo" />

        <!-- Away Team -->
        <ImageView
            android:id="@+id/awayLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_channel_placeholder"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/matchTime"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp" />

        <TextView
            android:id="@+id/awayTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Away Team"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@id/awayLogo"
            app:layout_constraintStart_toStartOf="@id/awayLogo"
            app:layout_constraintTop_toBottomOf="@id/awayLogo" />

        <!-- VS -->
        <TextView
            android:id="@+id/textVs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/homeLogo"
            app:layout_constraintEnd_toStartOf="@id/awayLogo"
            app:layout_constraintStart_toEndOf="@id/homeLogo"
            app:layout_constraintTop_toTopOf="@id/homeLogo" />
            
        <!-- Phase & Competition Container -->
        <LinearLayout
            android:id="@+id/channelsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textVs"
            app:layout_constraintStart_toEndOf="@id/homeLogo"
            app:layout_constraintEnd_toStartOf="@id/awayLogo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
